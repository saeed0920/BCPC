---
import { HoverBorderGradient } from "@/components/ui/hover-border-gradient";
const promoters = [
{img : "/logos/computer.png"},
{img : "/logos/moavenat.png"},
{img : "/logos/noafarin.png"},
{img : "/logos/park.png"},
]
const sponsors = [
{img : "/logos/daneshjoyar.png"},
{img : "/logos/iran-server.png"},
{img : "/logos/daneshjo.png"},
{img : "/logos/pazohesh.png"},
]
// grid sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-
---

<section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-5 lg:py-12 2xl:max-w-full">
        <div class="box flex flex-col w-full lg:w-fit mx-auto  gap-4 justify-center p-4 md:p-5">
                <div class="grid grid-cols-4 place-items-center lg:flex items-center justify-between p-3 gap-2  bg-neutral-100 dark:bg-[#ffeec6] shadow-md rounded-xl">
                    {promoters.map(item => <img class="h-[4rem] lg:w-[7rem] lg:h-[7rem] xl:w-[8rem] xl:h-[8rem] object-contain" src={item.img}/>)}
                </div>
<div class="place-items-center grid grid-cols-4 lg:flex items-center p-3 justify-between gap-2  bg-neutral-100 dark:bg-[#ffeec6] shadow-md rounded-xl">
                    {sponsors.map(item => <img class="h-[3rem] lg:w-[5rem] lg:h-[5rem] xl:w-[6rem] xl:h-[6rem] object-contain" src={item.img}/>)}
                </div>

    </div>
</section>

<style>
    .bg-trans {
        background : transparent !important;
    }
</style>
