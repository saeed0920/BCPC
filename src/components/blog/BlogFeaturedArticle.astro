---
import type { CollectionEntry } from 'astro:content'

const { posts } = Astro.props
const post = posts[0]

interface Props {
    posts: CollectionEntry<'posts'>[]
}
---

<section class="mx-auto max-w-[85rem] px-4 py-8 sm:px-6 lg:px-8 mb-10 2xl:max-w-full">
    <div class="text-left">
        <h2
            id="selected-articel"
            class="mb-4 text-balance text-5xl font-extrabold tracking-tight text-neutral-800 dark:text-neutral-200"
        >
            Featured Posts
        </h2>
        <p class="mb-8 max-w-prose text-pretty font-light text-neutral-600 dark:text-neutral-400 sm:text-xl">
            Here are a few articles that I think are not bad, hope you like too.
        </p>
    </div>

    {/* Main Content Area: Two-column layout */}
    <div class="flex flex-col md:flex-row md:space-x-8 lg:space-x-12">
        <div class="w-full md:w-2/3 mb-8 md:mb-0">
            <div
                class="bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden transform transition duration-500 ease-in-out"
            >
                <div>
                    <img
                        class="h-64 w-full object-cover md:h-80 lg:h-96"
                        src={post.data.banner as string}
                        alt="{post.imageAlt}"
                    />
                </div>
                {/* 内容部分 (Content Section) */}
                <div class="p-6 md:p-8">
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-3">
                        x
                    </h2>
                    <div class="flex items-center text-gray-600 dark:text-gray-400 mb-4 text-sm">
                        <!--<Calendar class="w-4 h-4 mr-2" /> {/* 日历图标 (Calendar Icon) */}-->
                        <time>x</time>
                    </div>
                    <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
                        x
                    </p>
                    <a
                        href="#"
                        class="mt-5 inline-block text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-200 font-semibold transition duration-300"
                    >
                        阅读更多 (Read More) &rarr;
                    </a>
                </div>
            </div>
        </div>

        <div class="w-full md:w-1/3">
            <div class="md:sticky md:top-8">
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 h-full">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
                        Featured Posts
                    </h3>
                    <ul class="space-y-3">
                        {posts.map(post => (
                            <li>
                                <button
                                    class={`w-full text-left p-3 rounded-lg transition duration-300 text-gray-700 dark:text-gray-300 ${
                                        false
                                            ? 'bg-indigo-100 dark:bg-indigo-900 font-semibold text-indigo-800 dark:text-indigo-200'

                                            : 'hover:bg-gray-100 dark:hover:bg-gray-700'

                                    }`}
                                >
                                    {post.data.title}
                                </button>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
