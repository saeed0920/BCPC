---
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '@layouts/BaseLayout.astro'
import HeroSection from '@components/ui/sections/HeroSection.astro'
import FeaturesSection from '@components/ui/sections/FeaturesSection.astro'
import HeroSectionAlt from '@components/ui/sections/HeroSectionAlt.astro'
import Profile from '@components/Profile.astro'
import blogHeroImg from '@images/home.png'
import { teams } from '../teamProfile.ts' 

---

<BaseLayout>
    <HeroSection
        title=`<span class="text-yellow-500 dark:text-yellow-400"><b>B</b>irjand Collegiate Programming Contest</span>`
        subTitle=`ðŸ“… Khordad 1-2`
        primaryBtn="SignUp"
        primaryBtnURL="https://forms.gle/RY1xVbcvSY7eSz6x7"
        src={blogHeroImg}
        alt="BCPC's log"
    />
    <FeaturesSection />

    <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full">
        <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
            <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
             Meet the Team Behind BCPC
            </h2>
            <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
            A group of passionate individuals dedicated to making this event unforgettable
            </p>
        </div>
        <div class="grid gap-5 grid-cols-[repeat(auto-fit,minmax(20rem,1fr))]">
            {
                teams.map(b => (
                    <Profile {...b} />
                ))
            }
        </div>
    </section>

    </BaseLayout>
