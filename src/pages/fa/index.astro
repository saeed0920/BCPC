
---
import { getCollection } from 'astro:content'
import type { CollectionEntry } from 'astro:content'
import BaseLayout from '@layouts/BaseLayout.astro'
import HeroSection from '@components/ui/sections/HeroSection.astro'
import FeaturesSection from '@components/ui/sections/FeaturesSection.astro'
import HeroSectionAlt from '@components/ui/sections/HeroSectionAlt.astro'
import Profile from '@components/Profile.astro'
import blogHeroImg from '@images/home.png'
import { teams } from '../../teamProfile.ts' 
---

<BaseLayout>
    <HeroSection
        title={`<span class="text-yellow-500 dark:text-yellow-400">بی‌سی‌پی‌سی</span>`}
        subTitle={`یاد بگیر. ارتباط برقرار کن. خلق کن. <br> 📅 ۲۲ تا ۲۳ مه ۲۰۲۵`}
        primaryBtn="ثبت‌نام"
        primaryBtnURL="/posts"
        src={blogHeroImg}
        alt="لوگوی بی‌سی‌پی‌سی"
    />
    <FeaturesSection />

    <section class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full" dir="rtl">
        <div class="mx-auto mb-10 max-w-2xl text-center lg:mb-14">
            <h2 class="text-3xl font-bold text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
             تیم برگزارکننده‌ی بی‌سی‌پی‌سی را بشناسید
            </h2>
            <p class="mt-1 text-pretty text-neutral-600 dark:text-neutral-400">
            گروهی از افراد پرشور که متعهد به برگزاری یک رویداد به‌یادماندنی هستند
            </p>
        </div>
        <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-4">
            {
                teams.map(b => (
                    <Profile {...b} />
                ))
            }
        </div>
    </section>
</BaseLayout>

