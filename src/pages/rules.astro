---
import BaseLayout from '@layouts/BaseLayout.astro'
import { SITE } from '@/config'
const description = "BCPC' Rules"
const URL = Astro.url.href
import SecondaryCTA from '@components/ui/buttons/SecondaryCTA.astro'

---
<BaseLayout
    title="Rules"
    description={description}
    structuredData={{
        '@context': 'https://schema.org',
        '@type': 'WebPage',
        'inLanguage': 'en-US',
        '@id': URL,
        'url': URL,
        'name': `Rules - ${SITE.title}`,
        'description': description,
        'isPartOf': {
            '@type': 'WebSite',
            'url': SITE.url,
            'name': SITE.title,
            'description': SITE.description,
        },
    }}
>

<section class="mx-auto max-w-[85rem] mt-10 lg:mt-10 px-4 py-10 sm:px-6 lg:px-8 lg:py-14 flex flex-col gap-5 items-start">
<SecondaryCTA
        title="Download PDF"
        url="/rules.pdf" download />

<iframe
    src="/rules.pdf#toolbar=0"
	style="border:none"
	title="Non-downloadable PDF Viewer"
></iframe>
    </section>

    </BaseLayout>

<style>
    iframe {
      width: 100%;
      height: 35rem;
      border: none;
      aspect-ratio: 6 / 9;
    }
    .download-btn {
      margin-top: 10px;
      display: inline-block;
      padding: 10px 15px;
      background-color: #007BFF;
      color: white;
      text-decoration: none;
      border-radius: 5px;
    }
  </style>
